<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_myCommodityStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_myCommodityPicture"
        android:layout_width="80sp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="250sp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_commodityInfo"
            android:layout_width="200sp"
            android:layout_height="0sp"
            android:layout_weight="2"
            android:textColor="@color/text_main"
            android:text="女大学生自用，99新，无破损，包邮，7天无理由退换"
            android:maxLines="2"
            android:maxEms="9"
            android:ellipsize="end"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/commodityFrom"
                android:textColor="@color/text_main1"
                android:textSize="8sp"/>

            <TextView
                android:id="@+id/tv_commodityFrom"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:paddingStart="4sp"
                android:text="宇宙无敌暴龙战士"
                android:gravity="center_vertical"
                android:textColor="@color/text_main1"
                android:textSize="8sp"/>

            <TextView
                android:id="@+id/tv_delete_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="invisible"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_commodityPrice"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="10sp"
        android:textColor="@color/text_main"
        android:gravity="center_vertical"
        android:text="88.8元"/>


</LinearLayout>